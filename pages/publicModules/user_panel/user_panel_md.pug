.module-user-panel-md
  .avatar
    img(src=tools.getUrl('userAvatar', targetUser.avatar))
  .info
    a(href=`/u/${targetUser.uid}` target="_blank").name= targetUser.username
    if data.user && data.user.uid !== targetUser.uid
      -var userSubscribeUsersId = data.userSubscribeUsersId || [];
      if userSubscribeUsersId.includes(targetUser.uid)
        .button(onclick=`SubscribeTypes.subscribeUser(${targetUser.uid}, false)`) 取关
      else
        .button(onclick=`SubscribeTypes.subscribeUser(${targetUser.uid}, true)`) 关注
    .cert=targetUser.info.certsName
    .description=(targetUser.description || "暂未填写个人简介")
