extends ../bootstrap_base
block title
  +includeCSS("/nkc/nkc.css")
  block nkcTitle
block content
  .container-fluid.max-width.management
    .row
      .col-xs-12.col-md-2.box-shadow-panel.m-b-1.p-r-0
        .nav
          ul
            li(class=!data.nav? "active" : "")
              a(href=`/nkc`)
                .fa.fa-line-chart
                | 网站总览

            li(class=data.nav==='home'?"active":"")
              a(href=`/nkc/home`)
                .fa.fa-home
                | 主页设置
                if !permission("nkcManagementHome")
                  | （无权）
            li(class=data.nav === 'sticker' ? "active" : "")
              a(href=`/nkc/sticker?t=unReviewed`)
                .fa.fa-smile-o
                | 表情管理
                if !permission("nkcManagementSticker")
                  | （无权）
            li(class=data.nav === 'note' ? "active" : "")
              a(href=`/nkc/note`)
                .fa.fa-file-text
                | 笔记管理
                if !permission("nkcManagementNote")
                  | （无权）
            li(class=data.nav === 'column' ? "active" : "")
              a(href=`/nkc/column`)
                .fa.fa-columns
                | 专栏管理
                if !permission("nkcManagementColumn")
                  | （无权）
            li(class=data.nav === 'post' ? "active" : "")
              a(href=`/nkc/post`)
                .fa.fa-paper-plane
                | 社区内容
                if !permission("nkcManagementPost")
                  | （无权）
            li(class=data.nav === 'document' ? "active" : "")
              a(href=`/nkc/document`)
                .fa.fa-paper-plane
                | 独立内容
                if !permission("nkcManagementDocument")
                  | （无权）
            li(class=data.nav === 'applyForum' ? 'active' : '')
              a(href=`/nkc/applyForum`)
                .fa.fa-paper-plane
                | 专业申请
                if !permission("nkcManagementApplyForum")
                  | （无权）
            li(class=data.nav === 'securityApplication' ? 'active' : '')
              a(href=`/nkc/securityApplication`)
                .fa.fa-list-alt
                | 手机号申诉
                if !permission("nkcManagementSecurityApplication")
                  | （无权）
            li(class=data.nav === 'os' ? 'active' : '')
              a(href=`/nkc/os`)
                .fa.fa-list-alt
                | 系统状态
                if !permission("nkcManagementOS")
                  | （无权）
      .col-xs-12.col-md-10.box-shadow-panel
        block nkcContent
block scripts
  script.
    if (NKC.configs.platform === 'reactNative') {
      window._userSelect = true;
    }
  block nkcScripts

